{
  "name": "build-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Construction project management platform for constructon",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:api": "pnpm --filter @build-tracker/api dev",
    "dev:client": "pnpm --filter @build-tracker/client-app dev",
    "dev:field": "pnpm --filter @build-tracker/field-app dev",
    "build": "pnpm run --parallel build",
    "build:api": "pnpm --filter @build-tracker/api build",
    "build:client": "pnpm --filter @build-tracker/client-app build",
    "build:field": "pnpm --filter @build-tracker/field-app build",
    "test": "pnpm run --parallel test",
    "test:api": "pnpm --filter @build-tracker/api test",
    "lint": "pnpm run --parallel lint",
    "lint:fix": "pnpm run --parallel lint:fix",
    "typecheck": "pnpm run --parallel typecheck",
    "db:migrate": "pnpm --filter @build-tracker/api db:migrate",
    "db:generate": "pnpm --filter @build-tracker/api db:generate",
    "db:seed": "pnpm --filter @build-tracker/api db:seed",
    "db:studio": "pnpm --filter @build-tracker/api db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "clean": "pnpm run --parallel clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "keywords": [
    "construction",
    "project-management",
    "build-tracker",
    "constructon"
  ],
  "author": "constructon",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
